
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scal=1.0">
    <title>URL Shortner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <h1>URL Shortner</h1>
    <form class="my-4 form-inline" action="/shorturls" method="post">
      <!-- <label for="url" class="sr-only">URL</label> -->
      <input required placeholder="url" type="text" name="url" id="fullURL" class="form-control mr-2 col " value="">
      <button class="btn btn-success" type="submit" name="button">Shrink</button>
    </form>
    <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>URL</th>
            <th>Short Link</th>
            <th>Clicks</th>
          </tr>
        </thead>

        <tbody>


            <% shortURLS.forEach(shorturl => { %>
              <tr>
              <td><a href="<%= shorturl.fullUrl%> " target="_blank" ><%= shorturl.fullUrl%></a></td>
              <td><a href="<%= shorturl.ShortUrl%>" target="_blank" ><%= shorturl.ShortUrl%></a></td>
              <td><%= shorturl.clicks%></td>
            </tr>
            <%})%>


        </tbody>
    </table>
  </body>
</html>
